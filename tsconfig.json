{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["ES2020"],
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "useDefineForClassFields": true
  }
}
